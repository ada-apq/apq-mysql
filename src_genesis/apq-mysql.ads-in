with Ada.Unchecked_Conversion;

package APQ.MySQL is

%mysql_linker_options%

type Field_Type is (
%ENUM_FIELD_TYPE%
);
for Field_Type use (
%USE_FIELD_TYPE%
);
for Field_Type'Size use 32;

type Result_Type is (
%ENUM_RESULT_TYPE%
);
for Result_Type use (
%USE_RESULT_TYPE%
);
   for Result_Type'Size use 32;

   -- MySQL Connection Option Argument Types
   type Option_type is (
%OPTION_ENUM_MY%
	);
	for Option_type use (
%USE_OPTION_ENUM_MY%
	);
   	for  Option_type'Size use 32;

   -- type Option_Argument_Type is (
   type Argument_Type is (
		ARG_NOT_USED,  -- No argument
		ARG_UINT,      -- Argument is unsigned int
		ARG_PTR_UINT,  -- Argument is pointer to unsigned int (weird), which is 0 or 1
		ARG_CHAR_PTR   -- Argument is char pointer
			 );
   type ssl_type is ( key , cert , ca , capath , cipher );

private

   	type Argument_Ptr is access all Argument_Type;
	type Argument_Ptr_Array is array(Natural range <>) of Argument_Ptr;
	type Argument_Ptr_Array_Access is access all Argument_Ptr_Array;
	procedure Free is new Ada.Unchecked_Deallocation(Argument_Type, Argument_Ptr);
   procedure Free is new Ada.Unchecked_Deallocation(Argument_Ptr_Array, Argument_Ptr_Array_Access);

   type base_type is ( none , common , ssl ); -- you can sugest more :-)

   type root_base_record is tagged
      record
	 base : base_type := none ;
      end record;
   type root_base_ptr is access all root_base_record'Class;
   type root_base_ptr_array is array ( base_type range base_type'(common) .. base_type'Last ) of root_base_ptr ;
   type root_base_ptr_array_access is access all root_base_ptr_array ;

   type ssl_array_ptr is array ( ssl_type ) of char_array_access;

   type common_array_unsigned_ptr is array ( Option_type ) of apq.Unsigned_Ptr;
   type common_array_char_ptr is array ( Option_type ) of char_array_access;
   type common_array_bool is array ( Option_type ) of boolean;

   type common_part_record is new root_base_record with
      record
	 char_part : common_array_char_ptr := common_array_char_ptr'( others => null );
	 unsigned_part : common_array_unsigned_ptr := common_array_unsigned_ptr'( others => null );
	 valido : common_array_bool := common_array_bool'( others => false );
	 -- remember that: while set char_part to non-null, set unsigned_part to null, and vice-versa);
	 -- valid is set to true when first set a value in cache_key_nameval_create()
      end record;

   type ssl_part_record is new root_base_record with
      record
	 char_part : ssl_array_ptr := ssl_array_ptr'( others => null );
      end record;

   function toUnsigned is new ada.Unchecked_Conversion(Source => Option_type, Target => interfaces.c.unsigned);

	type Return_Status is range -2 ** 31 .. 2 ** 31 - 1;
	for Return_Status'Size use 32;

	type MySQL_Oid_Type is mod 2 ** 64;
	for MySQL_Oid_Type'Size use 64;

	type u_long is mod 2 ** 32;
	for u_long'size use 32;

	Null_Row_ID : constant Row_ID_Type := 0;

	type MYSQL       is new System.Address;   -- Connection
	type MYSQL_RES   is new System.Address;   -- Result
	type MYSQL_ROW   is new System.Address;   -- Row
	type MYSQL_FIELD is new System.Address;   -- Field

	Null_Connection : constant MYSQL := MYSQL(System.Null_Address);
	Null_Result :     constant MYSQL_RES := MYSQL_RES(System.Null_Address);
	Null_Row :        constant MYSQL_ROW := MYSQL_ROW(System.Null_Address);
	Null_Field :      constant MYSQL_FIELD := MYSQL_FIELD(System.Null_Address);

	type MYSQL_ROW_NO is mod 2 ** %MYSQL_ROW_NO%;

end APQ.MySQL;

