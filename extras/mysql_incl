:
# Show the include file pathname for My_SQL

if [ ! -f config.win32 ] ; then
	set -- $(getopt I:D: $(mysql_config --cflags))

	INCL_PATH=/usr/include

	while [ $# -gt 0 ] ; do
		case "$1" in
		-I )	INCL_PATH="$2"; shift 2;;
		-D )	shift 2;;			# Ignore -D option with argument
		-- )	shift; break;;
		* )	shift;;
		esac
	done

	eval echo $INCL_PATH

else
	sed -n '/^MY_UINCL/p' <config.win32 | sed 's|^.*=||;s| *$||'
fi

# End
