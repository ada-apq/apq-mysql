with "apq.gpr";

project Buildsystem_Apq_Mysql is

   for Languages use ("Ada", "C", "Makefile", "Project File", "Shell");
   for Source_Dirs use ("./**");

   package Naming is
      for Spec_Suffix ("c") use ".h";
      for Body_Suffix ("c") use ".c";
      for Spec_Suffix ("project file") use ".gpr.in";
      for Body_Suffix ("project file") use ".gpr";
      for Body_Suffix ("makefile") use "Makefile";
      for Body_Suffix ("shell") use ".sh";
      for Implementation_Exceptions ("project file") use ("*.gpr.in");
      for Implementation_Exceptions ("makefile") use ("MakeFile.include", "*.txt" , "Makefile.include." );
      for Implementation_Exceptions ("project file") use ("*.gpr.in", "*.gpr.in.*");
      for Implementation_Exceptions ("ada") use ("*.adb-in");
      for Specification_Exceptions ("ada") use ("*.ads-in");
   end Naming;

end Buildsystem_Apq_Mysql;

